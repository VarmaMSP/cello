{
    "go.useLanguageServer": true,
    "go.lintTool": "revive",
    "go.toolsGoPath": "~/gotools",
    "go.toolsEnvVars": {
        "GO111MODULE": "on"
    },
    "go.lintFlags": [
        "--config=${workspaceRoot}/revive.toml",
        "--formatter=stylish"
    ],
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.formatOnSave": true
    }
}
