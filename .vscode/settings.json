    "go.lintTool": "gometalinter",
    "go.lintFlags": [
        "--disable-all",
        "--enable=golint",
        "--config=${workspaceRoot}/.gometalinter"
    ],
    "editor.insertSpaces": true,
    "editor.formatOnSave": false,
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true
    }
}
